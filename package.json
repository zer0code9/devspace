{
	"name": "devspace",
    "displayName": "Dev Space",
    "description": "Snippets, themes and keymaps for VSCode",
    "version": "1.2.1",
    "author": "Slash",
    "publisher": "SlashDEV",
    "engines": { "vscode": "^1.56.0" },
    "license": "MIT",
    "repository": { "type": "git", "url": "https://github.com/zer0code9/devspace.git" },
    "icon": "img/logo.png",
    "categories": [ "Snippets", "Themes", "Keymaps" ],
    "keywords": [ "snippet", "theme", "keymaps", "slashDEV", "Dev Space" ],
  	"main": "./extension",
    "activationEvents": [ "onStartupFinished" ],
    "contributes": {
        "snippets": [
            { "language": "javascript", "path": "./snippets/js.code-snippets" },
            { "language": "javascript", "path": "./snippets/jsx.code-snippets" },
            { "language": "java", "path": "./snippets/java.code-snippets" },
            { "language": "python", "path": "./snippets/py.code-snippets" },
            { "language": "html", "path": "./snippets/ht.code-snippets" },
            { "language": "css", "path": "./snippets/css.code-snippets" },
            { "language": "scss", "path": "./snippets/scss.code-snippets" },
            { "language": "shellscript", "path": "./snippets/sh.code-snippets" },
            { "language": "markdown", "path": "./snippets/md.code-snippets" }
        ],
        "themes": [
            { "label": "Super Dark Red", "uiTheme": "vs-dark", "path": "./themes/sdr-color-theme.json" },
            { "label": "Classic Dark Red", "uiTheme": "vs-dark", "path": "./themes/cdr-color-theme.json" },
            { "label": "Super Dark Punk", "uiTheme": "vs-dark", "path": "./themes/sdp-color-theme.json" }
        ],
        "keybindings": [
            { "key": "alt+.", "command": "workbench.action.showCommands" },
            { "key": "alt+p", "command": "workbench.actions.view.problems", "when": "editorTextFocus" },
            { "key": "alt+d", "command": "editor.action.marker.nextInFiles", "when": "editorTextFocus" },
            { "key": "alt+a", "command": "editor.action.marker.prevInFiles", "when": "editorTextFocus" },
            { "key": "alt+x", "command": "editor.action.deleteLines", "when": "editorTextFocus" }
        ],
        "viewsContainers": {
            "activitybar": [
                { "id": "slashdev", "title": "SlashDEV", "icon": "img/icon.png" }
            ]
        },
        "views": {
            "slashdev": [
                { "id": "devspace.sideBar", "name": "Dev Space", "contextualTitle": "Dev Space" }
            ]
        },
        "viewsWelcome": [
            { "view": "devspace.sideBar", "contents": "Welcome to Dev Space! Use the snippets, themes, and keymaps to your liking!" }
            
        ]
    },
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
        "@types/vscode": "^1.56.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "eslint": "^7.19.0",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0"
    }
}
