{
  "name": "devspace",
  "displayName": "Dev Space",
  "description": "A little more VSCode",
  "version": "2.0.2",
  "author": "Creaion",
  "publisher": "SlashDEV",
  "engines": {
    "vscode": "^1.100.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zer0code9/devspace.git"
  },
  "icon": "img/logo.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "Creaion",
    "Dev Space",
    "Node View",
    "Project Box",
    "Term Pad"
  ],
  "activationEvents": [
    "onView:workbench.explorer.fileView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devspaceContainer",
          "title": "Dev Space",
          "icon": "img/container.svg"
        }
      ],
      "panel": [
        {
          "id": "termpadPanel",
          "title": "Terms",
          "icon": "img/container.svg"
        }
      ]
    },
    "views": {
      "devspaceContainer": [
        {
          "id": "devspace.nodeView",
          "name": "Node View",
          "contextualTitle": "Node View",
          "icon": "img/container.svg"
        },
        {
          "id": "devspace.devSpace",
          "name": "Dev Space",
          "contextualTitle": "Dev Space",
          "icon": "img/container.svg"
        }
      ],
      "termpadPanel": [
        {
          "id": "devspace.termPad",
          "name": "Terms",
          "contextualTitle": "Terms",
          "icon": "img/container.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "devspace.nodeView",
        "contents": "Go to a workspace folder that has a package.json file to get started!\n[Open Folder](command:vscode.openFolder)\n[Add Folder](command:devspace.addFolders)\nYou will be able to see all the dependencies and update or uninstall them. Works with npm and yarn. To change to yarn go to the Dev Space settings."
      },
      {
        "view": "devspace.devSpace",
        "contents": "Welcome to Dev Space!\n\n"
      },
      {
        "view": "devspace.termPad",
        "contents": "No terms have been detected in the workspace."
      }
    ],
    "commands": [
      {
        "command": "devspace.openDevSpaceSettings",
        "title": "Open Dev Space Settings"
      },
      {
        "command": "devspace.refreshNodeView",
        "title": "Refresh",
        "icon": {
          "dark": "img/dark/refresh.svg",
          "light": "img/light/refresh.svg"
        }
      },
      {
        "command": "devspace.openNodeFolder",
        "title": "Open Node Folder",
        "icon": {
          "dark": "img/dark/folderPlus.svg",
          "light": "img/light/folderPlus.svg"
        }
      },
      {
        "command": "devspace.changeNodeManager",
        "title": "Change Node Manager",
        "icon": {
          "dark": "img/dark/gear.svg",
          "light": "img/light/gear.svg"
        }
      },
      {
        "command": "devspace.showNodeHistory",
        "title": "Show Node History",
        "icon": {
          "dark": "img/dark/clock.svg",
          "light": "img/light/clock.svg"
        }
      },
      {
        "command": "devspace.addNodeItem",
        "title": "Add",
        "icon": {
          "dark": "img/dark/filePlus.svg",
          "light": "img/light/filePlus.svg"
        }
      },
      {
        "command": "devspace.updateNodeItem",
        "title": "Update",
        "icon": {
          "dark": "img/dark/fileRedo.svg",
          "light": "img/light/fileRedo.svg"
        }
      },
      {
        "command": "devspace.removeNodeItem",
        "title": "Remove",
        "icon": {
          "dark": "img/dark/fileMinus.svg",
          "light": "img/light/fileMinus.svg"
        }
      },
      {
        "command": "devspace.openNodeItem",
        "title": "Open",
        "icon": {
          "dark": "img/dark/fileSearch.svg",
          "light": "img/light/fileSearch.svg"
        }
      },
      {
        "command": "devspace.showProjectBox",
        "title": "Show Project Box",
        "icon": {
          "dark": "img/dark/box.svg",
          "light": "img/light/box.svg"
        }
      },
      {
        "command": "devspace.addFoldersBox",
        "title": "Add Folders to Box",
        "icon": "img/plus.svg"
      },
      {
        "command": "devspace.addFoldersBoxUri",
        "title": "Add Folders to Box with URI",
        "icon": "img/plus.svg"
      },
      {
        "command": "devspace.removeFoldersBox",
        "title": "Remove Folders from Box",
        "icon": "img/minus.svg"
      },
      {
        "command": "devspace.addFoldersWorkspace",
        "title": "Add Folder to Workspace",
        "icon": "img/folderPlus.svg"
      },
      {
        "command": "devspace.removeFoldersWorkspace",
        "title": "Remove Folder from Workspace",
        "icon": "img/folderMinus.svg"
      },
      {
        "command": "devspace.refreshTermPad",
        "title": "Refresh",
        "icon": {
          "dark": "img/dark/refresh.svg",
          "light": "img/light/refresh.svg"
        }
      },
      {
        "command": "devspace.goToFile",
        "title": "Go to File"
      },
      {
        "command": "devspace.goToTerm",
        "title": "Go to Term"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+alt+c",
        "command": "workbench.action.showCommands"
      },
      {
        "key": "ctrl+alt+s",
        "command": "devspace.openDevSpaceSettings"
      },
      {
        "key": "ctrl+alt+d",
        "command": "workbench.view.extension.devspaceContainer"
      },
      {
        "key": "ctrl+alt+h",
        "command": "devspace.showNodeHistory"
      },
      {
        "key": "ctrl+alt+b",
        "command": "devspace.showProjectBox"
      },
      {
        "key": "ctrl+alt+w",
        "command": "workbench.explorer.fileView.focus"
      },
      {
        "key": "ctrl+alt+t",
        "command": "workbench.view.extension.termpadPanel"
      },
      {
        "key": "ctrl+alt+p",
        "command": "workbench.actions.view.problems"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "devspace.refreshNodeView",
          "when": "view == devspace.nodeView",
          "group": "navigation"
        },
        {
          "command": "devspace.openNodeFolder",
          "when": "view == devspace.nodeView",
          "group": "navigation"
        },
        {
          "command": "devspace.changeNodeManager",
          "when": "view == devspace.nodeView",
          "group": "navigation"
        },
        {
          "command": "devspace.showNodeHistory",
          "when": "view == devspace.nodeView",
          "group": "navigation"
        },
        {
          "command": "devspace.addNodeItem",
          "when": "view == devspace.nodeView",
          "group": "navigation"
        },
        {
          "command": "devspace.showProjectBox",
          "when": "view == workbench.explorer.fileView",
          "group": "navigation"
        },
        {
          "command": "devspace.refreshTermPad",
          "when": "view == devspace.termPad",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "devspace.updateNodeItem",
          "when": "view == devspace.nodeView && viewItem == depnode",
          "group": "inline"
        },
        {
          "command": "devspace.removeNodeItem",
          "when": "view == devspace.nodeView && viewItem == depnode",
          "group": "inline"
        },
        {
          "command": "devspace.openNodeItem",
          "when": "view == devspace.nodeView && viewItem == depnode",
          "group": "inline"
        },
        {
          "command": "devspace.goToFile",
          "when": "view == devspace.termPad && viewItem == filenode"
        }
      ],
      "touchBar": [
        {
          "command": "devspace.showProjectBox",
          "when": "true",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "id": "devspace.settings",
      "title": "Dev Space",
      "properties": {
        "devspace.nodeRoot": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "The path to the workspace folder",
          "ignoreSync": true
        },
        "devspace.securedRoot": {
          "type": "boolean",
          "default": false,
          "description": "Whether to use 'sudo' for package manager",
          "ignoreSync": true
        },
        "devspace.packageManager": {
          "type": "string",
          "default": "npm",
          "description": "The package manager to use",
          "enum": [
            "npm",
            "bun",
            "yarn"
          ],
          "ignoreSync": true
        },
        "devspace.showNewVersions": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show the new version in Node View",
          "ignoreSync": false
        },
        "devspace.projects": {
          "type": "array",
          "default": [],
          "description": "The saved projects",
          "ignoreSync": true
        },
        "devspace.terms": {
          "type": "array",
          "default": [
            "todo",
            "fixme",
            "debug",
            "review",
            "hack",
            "note"
          ],
          "description": "The terms to look for",
          "ignoreSync": false
        },
        "devspace.broadTermSearch": {
          "type": "boolean",
          "default": true,
          "description": "If checked, it will show the terms for unopened files as well (not working in v1.4.1)",
          "ignoreSync": false
        }
      }
    },
    "icons": {
      "devspace-box": {
        "description": "Box",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e900"
        }
      },
      "devspace-check": {
        "description": "Check",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e901"
        }
      },
      "devspace-cross": {
        "description": "Cross",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e902"
        }
      },
      "devspace-plus": {
        "description": "Plus",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e903"
        }
      },
      "devspace-minus": {
        "description": "Minus",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e904"
        }
      },
      "devspace-folderPlus": {
        "description": "Folder Add",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e905"
        }
      },
      "devspace-folderMinus": {
        "description": "Folder Remove",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e906"
        }
      },
      "devspace-cabinet": {
        "description": "Cabinet",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e907"
        }
      },
      "devspace-user": {
        "description": "User",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e908"
        }
      },
      "devspace-slider": {
        "description": "Slider",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e909"
        }
      },
      "devspace-dots": {
        "description": "Dots",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e90a"
        }
      },
      "devspace-export": {
        "description": "Export",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e90b"
        }
      },
      "devspace-import": {
        "description": "Import",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e90c"
        }
      },
      "devspace-checkmark": {
        "description": "Checkmark",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e90d"
        }
      },
      "devspace-gear": {
        "description": "Gear",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e90e"
        }
      },
      "devspace-shipping": {
        "description": "Shipping",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e90f"
        }
      },
      "devspace-layers": {
        "description": "Layers",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e910"
        }
      },
      "devspace-code": {
        "description": "Code",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e911"
        }
      },
      "devspace-box-closed": {
        "description": "Box Closed",
        "default": {
          "fontPath": "img/devspace-v2.woff",
          "fontCharacter": "\\e912"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.5.2",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "eslint": "^8.57.1",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.9.2"
  }
}
