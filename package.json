{
  "name": "devspace",
  "displayName": "Dev Space",
  "description": "Snippets, themes and keymaps for VSCode",
  "version": "1.3.1",
  "author": "zer0code9",
  "publisher": "SlashDEV",
  "engines": {
    "vscode": "^1.96.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zer0code9/devspace.git"
  },
  "icon": "img/logo.png",
  "categories": [
    "Snippets",
    "Themes",
    "Keymaps"
  ],
  "keywords": [
    "snippet",
    "theme",
    "keymaps",
    "slashDEV",
    "Dev Space"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/js.code-snippets"
      },
      {
        "language": "javascript",
        "path": "./snippets/jsx.code-snippets"
      },
      {
        "language": "java",
        "path": "./snippets/java.code-snippets"
      },
      {
        "language": "python",
        "path": "./snippets/py.code-snippets"
      },
      {
        "language": "html",
        "path": "./snippets/ht.code-snippets"
      },
      {
        "language": "css",
        "path": "./snippets/css.code-snippets"
      },
      {
        "language": "scss",
        "path": "./snippets/scss.code-snippets"
      },
      {
        "language": "shellscript",
        "path": "./snippets/sh.code-snippets"
      },
      {
        "language": "markdown",
        "path": "./snippets/md.code-snippets"
      }
    ],
    "themes": [
      {
        "label": "Super Dark Red",
        "uiTheme": "vs-dark",
        "path": "./themes/sdr-color-theme.json"
      },
      {
        "label": "Classic Dark Red",
        "uiTheme": "vs-dark",
        "path": "./themes/cdr-color-theme.json"
      },
      {
        "label": "Super Dark Punk",
        "uiTheme": "vs-dark",
        "path": "./themes/sdp-color-theme.json"
      }
    ],
    "keybindings": [
      {
        "key": "alt+.",
        "command": "workbench.action.showCommands"
      },
      {
        "key": "alt+p",
        "command": "workbench.actions.view.problems",
        "when": "editorTextFocus"
      },
      {
        "key": "alt+d",
        "command": "editor.action.marker.nextInFiles",
        "when": "editorTextFocus"
      },
      {
        "key": "alt+a",
        "command": "editor.action.marker.prevInFiles",
        "when": "editorTextFocus"
      },
      {
        "key": "alt+x",
        "command": "editor.action.deleteLines",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+s ctrl+s",
        "command": "devspace.showNodeRoot"
      },
      {
        "key": "ctrl+shift+d",
        "command": "devspace.showNodeView"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "slashdev",
          "title": "SlashDEV",
          "icon": "img/icon.png"
        }
      ]
    },
    "views": {
      "slashdev": [
        {
          "id": "devspace.nodeView",
          "name": "Node View",
          "contextualTitle": "Node View"
        },
        {
          "id": "devspace.sideBar",
          "name": "Dev Space",
          "contextualTitle": "Dev Space"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "devspace.nodeView",
        "contents": "Go to a workspace folder that has a package.json file to get started!\n[Open Folder](command:vscode.openFolder)\nYou will be able to see all the dependencies and update or uninstall them."
      },
      {
        "view": "devspace.sideBar",
        "contents": "Welcome to Dev Space! Use the snippets, themes, and keymaps to your liking!"
      }
    ],
    "commands": [
      {
        "command": "devspace.refreshNodeView",
        "title": "Refresh",
        "icon": "img/refresh.svg"
      },
      {
        "command": "devspace.updateNodeItem",
        "title": "Update",
        "icon": "img/update.svg"
      },
      {
        "command": "devspace.uninstallNodeItem",
        "title": "Uninstall",
        "icon": "img/uninstall.svg"
      },
      {
        "command": "devspace.openNodeItem",
        "title": "Open",
        "icon": "img/open.svg"
      },
      {
        "command": "devspace.showNodeRoot",
        "title": "Show Node Root"
      },
      {
        "command": "devspace.showNodeView",
        "title": "Open Slashdev"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "devspace.refreshNodeView",
          "when": "view == devspace.nodeView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "devspace.updateNodeItem",
          "when": "view == devspace.nodeView && viewItem == node",
          "group": "inline"
        },
        {
          "command": "devspace.uninstallNodeItem",
          "when": "view == devspace.nodeView && viewItem == node",
          "group": "inline"
        },
        {
          "command": "devspace.openNodeItem",
          "when": "view == devspace.nodeView && viewItem == node",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "id": "devspace.settings",
      "title": "Dev Space",
      "properties": {
        "devspace.nodeRoot": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "The path to the workspace folder"
        },
        "devspace.autorefresh": {
          "type": "boolean",
          "default": true,
          "description": "Whether to refresh the node view automatically or not"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.7.3"
  }
}
